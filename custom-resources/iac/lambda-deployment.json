{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Lambda para desplegar recursos en AWS",
  "Parameters": {
    "KeyFileLambdaDeployment": {
      "Type": "String",
      "Description": "Nombre del archivo con el deployment de la lambda para generar versión"
    },
    "Project": {
      "Type": "String",
      "Description": "Nombre del archivo con el deployment de la lambda para generar versión",
      "Default": "kiire"
    },
    "GeneracionLogs" : {
      "Type" : "String",
      "Default" : "false",
      "AllowedValues" : [ "false", "true" ],
      "Description" : "Enter false or true. Default is false."
    }
  },
  "Conditions": {
    "GenerarLogs": { "Fn::Equals": [ "true", { "Ref": "GeneracionLogs" } ] }
  },
  "Resources": {
    "DeploymentLambdaRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": { "Service": [ "lambda.amazonaws.com" ] },
              "Action": [ "sts:AssumeRole" ]
            }
          ]
        },
        "Path": "/",
        "ManagedPolicyArns": [ { "Fn::If": ["GenerarLogs", "arn:aws:iam::aws:policy/service-role/AWSLambdaVPCAccessExecutionRole", { "Ref": "AWS::NoValue" } ] } ],
        "Policies": [
          {
            "PolicyName": { "Fn::Sub" : [ "${project}-lambda-deployment-policy", { "project": { "Ref": "Project" } } ] },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [ "lambda:PublishVersion" ],
                  "Resource": [ "*" ]
                }
              ]
            }
          }
        ],
        "RoleName": { "Fn::Sub" : [ "${project}-role-lambda-deployment", { "project": { "Ref": "Project" } } ] }
      }
    },
    "DeploymentLambda": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Role": { "Fn::GetAtt": [ "DeploymentLambdaRole", "Arn" ] },
        "Handler": "index.handler",
        "Runtime": "nodejs16.x",
        "Description": "Lambda para crear recursos de AWS",
        "FunctionName": { "Fn::Sub" : [ "${project}-lambda-deployment-custom-resources", { "project": { "Ref": "Project" } } ] },
        "Code": {
          "S3Bucket": "test-my-bucket-aws",
          "S3Key": { "Ref": "KeyFileLambdaDeployment" }
        }
      }
    }
  },
  "Outputs": {
    "DeploymentLambdaArn": {
      "Description": "Arn de la DeploymentLambdaArn para crear recursos",
      "Value": { "Fn::GetAtt": [ "DeploymentLambda", "Arn" ] },
      "Export": { "Name": "DeploymentLambdaArn" }
    }
  }
}
